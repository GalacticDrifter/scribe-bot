{
    "manifest_version": 3,
    "name": "ScribeBot",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabCapture",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:5000/*"
    ],
    "background": {
        "service_worker": "static/js/background.js"
    },
    "action": {
        "default_popup": "templates/popup.html"
    }
}